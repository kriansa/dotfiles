# My gitconfig
#

[user]
	name = AUTHORNAME
	email = AUTHOREMAIL
	signingkey = GPG_SIGNING_KEY
[credential]
	helper = GIT_CREDENTIAL_HELPER
[alias]
	co = checkout
	st = status
  graph = log --graph --pretty=format:'%C(auto)%h%Creset%C(auto)%d%Creset %s %C(magenta bold)(%cr)%Creset %C(cyan)<%aN>%Creset'
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[core]
	excludesfile = ~/.gitignore
	editor = nvim
	autocrlf = input
[gpg]
	program = gpg2
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
