#!/usr/bin/env sh

# Remove this bin dir from $PATH env var
# So we don't end up in a infinite loop
THIS_DIR=$(cd $(dirname $0); pwd)
export PATH=$(echo $PATH | sed -e "s#${THIS_DIR}:##")

# Sets the RBENV_VERSION to the .ruby-version of this plugin
# Then execute the original binary file
BINARY_PATH=$(RBENV_VERSION=$(cat $(dirname ${THIS_DIR})/.ruby-version) rbenv which mailcatcher)
$BINARY_PATH $@
