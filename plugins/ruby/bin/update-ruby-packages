#!/usr/bin/env bash

# Plugin path
PLUGIN_PATH=$(cd $(dirname $0)/..; pwd)

# Sets the RUBY_VERSION to the .ruby-version of this plugin
export RBENV_VERSION=$(cat $PLUGIN_PATH/.ruby-version)

for package in $(cat $PLUGIN_PATH/data/packages.txt); do
  gem install $package
done

# Ensures that nodenv updates the binstubs
rbenv rehash
