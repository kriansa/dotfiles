#!/usr/bin/env bash
#
# Small shim to add cross-platform support for pbcopy/pbpaste

if [[ "$OSTYPE" == "darwin"* ]]; then
  exec /usr/bin/pbcopy "$@"
else
  if [[ "$XDG_SESSION_TYPE" == "wayland" ]]; then
    exec wl-copy --type text/plain "$@"
  else
    exec xclip -in -selection clipboard "$@"
  fi
fi
