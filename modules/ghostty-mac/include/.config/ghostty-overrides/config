# MacOS specific settings
font-size = 23
adjust-cell-width = -1

# Unbind keys that should be Linux-only
keybind = "ctrl+shift+,=unbind"
keybind = "ctrl+shift+v=unbind"

# Keybinds for default terminal behavior
keybind = "super+shift+,=reload_config"
keybind = "super+v=paste_from_clipboard"
keybind = "super+q=quit"

# Option key combinations - send raw characters instead of Alt+key
# This preserves accented character input when tmux extended-keys is enabled
#
# Tmux doesn't support Kitty extended keys and it doesn't look like it's going to support them
# anytime soon, so this is is a valid workaround so I can keep using extended-keys AND have correct
# character input support on MacOS.

# Option + Letters (a-z)
keybind = "option+a=text:å"
keybind = "option+b=text:∫"
keybind = "option+c=text:ç"
keybind = "option+d=text:∂"
keybind = "option+f=text:ƒ"
keybind = "option+g=text:©"
keybind = "option+h=text:˙"
keybind = "option+j=text:∆"
keybind = "option+k=text:˚"
keybind = "option+l=text:¬"
keybind = "option+m=text:µ"
keybind = "option+o=text:ø"
keybind = "option+p=text:π"
keybind = "option+q=text:œ"
keybind = "option+r=text:®"
keybind = "option+s=text:ß"
keybind = "option+t=text:†"
keybind = "option+v=text:√"
keybind = "option+w=text:∑"
keybind = "option+x=text:≈"
keybind = "option+y=text:¥"
keybind = "option+z=text:Ω"

# Option + Numbers (0-9)
keybind = "option+0=text:º"
keybind = "option+1=text:¡"
keybind = "option+2=text:™"
keybind = "option+3=text:£"
keybind = "option+4=text:¢"
keybind = "option+5=text:∞"
keybind = "option+6=text:§"
keybind = "option+7=text:¶"
keybind = "option+8=text:•"
keybind = "option+9=text:ª"

# Option + Symbols
keybind = "option+minus=text:–"
keybind = "option+equal=text:≠"
keybind = "option+[=text:“"
keybind = "option+]=text:‘"
keybind = "option+\=text:«"
keybind = "option+;=text:…"
keybind = "option+'=text:æ"
keybind = "option+,=text:≤"
keybind = "option+.=text:≥"
keybind = "option+/=text:÷"

