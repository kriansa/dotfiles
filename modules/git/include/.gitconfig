[alias]
  co = checkout
  cm = commit
  rs = reset
  st = status
  wip = "!git add -A; git rm $(git ls-files --deleted) 2> /dev/null; git commit -m '--wip--'"
  unwip = "!git log -n 1 | grep -q -c -- --wip-- && git reset HEAD~1"
  graph = log --graph --pretty=format:'%C(auto)%h%Creset%C(auto)%d%Creset %s %C(magenta bold)(%cr)%Creset %C(cyan)<%aN>%Creset'
  uncommit = reset --soft HEAD^
  recent = branch --sort=-committerdate --format=\"%(committerdate:relative)%09%(refname:short)\"
[init]
  defaultBranch = main
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[core]
  attributesfile = ~/.gitattributes
  autocrlf = input
[commit]
  template = ~/.gitmessage
[push]
  default = current
  followTags = true
[rebase]
  autoStash = true
[branch "master"]
  remote = origin
  merge = refs/heads/master
  rebase = true
[branch "main"]
  remote = origin
  merge = refs/heads/main
  rebase = true
[diff "rspec"]
  xfuncname = "^[ \t]*((RSpec|describe|context|it|before|after|around|feature|scenario|background)[ \t].*)$"
[diff "swift"]
  xfuncname = ^[ \t]*((class|func)[ \t].*)$
[diff "sqlite"]
  textconv = echo .dump | sqlite3

;; Override settings for anything under Projects folder (work-related)
;; This must be added as last entry so it can take precedence and override attributes
;; The trailing slash is required
[includeIf "gitdir:~/Projects/"]
  path = ~/.gitconfig-work
