#!/usr/bin/env zsh
#
# Install our dotfiles

# First let's cd to the base path
DOTFILES_ROOT=$0:A:h:h
cd $DOTFILES_ROOT

source 'helpers/installer_helper.zsh'
source 'config.zsh'

#
# Start the process
#

info 'Starting setup of dotfiles\n\n'

for plugin in $plugins; do
  install_script="plugins/${plugin}/install"

  if [[ -x $install_script ]]; then
    info "Executing \"${plugin}\" ...\n"
    sh -c $install_script
    success "$plugin installed!\n"
  fi
done

success "All installed in ${SECONDS}s!"
